<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_holod"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/policy"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:text="Policy"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:text="Product Manager"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:text="Epic Origin"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:text="Brand"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:cornerRadius="15dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/currentState"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="250dp"
        android:background="@color/white_holod"
        android:hint="Current Policies"
        android:orientation="vertical"
        android:textAlignment="center"
        android:textColorHint="@color/blue_ray"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/export_csv"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginHorizontal="100dp"
        app:cornerRadius="20dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Export as CSV"
        android:backgroundTint="@color/rose"
        android:layout_marginBottom="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/blue_ray"
        android:paddingHorizontal="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="92dp"
        android:gravity="center"
        android:text="Policies"
        android:textColor="@color/blue_ray"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:paddingBottom="50dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>